<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewLayer.MainActivity">


    <TextView
        android:id="@+id/topbar_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WishOClock"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/wishoclock_font"
        android:textStyle="bold"
        android:textSize="60sp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celebrate Every Moment, Right on Time."
        android:textStyle="italic"
        android:textSize="15sp"
        android:fontFamily="@font/wishoclock_font"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/topbar_Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Add Wish Button -->
    <Button
        android:id="@+id/add_wish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:text="Add"
        android:textSize="15sp"
        android:backgroundTint="@color/primary_orange"
        app:icon="@drawable/add_button_alarm"
        app:iconGravity="start"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>